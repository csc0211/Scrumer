<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:scrumer="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bkg_color_green_light"
             android:clipToPadding="true"
             android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="@dimen/main_more_vert_size"
                android:layout_height="@dimen/main_more_vert_size"
                android:layout_alignParentStart="true"
                android:onClick="onBackCliked"
                android:src="@drawable/ic_keyboard_backspace_white_24dp"/>

            <ImageView
                android:layout_width="@dimen/main_more_vert_size"
                android:layout_height="@dimen/main_more_vert_size"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_white_24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="56dp"
                android:singleLine="true"
                android:text="Network Request"
                android:textColor="@color/txt_color_white"
                android:textSize="@dimen/fontsize_title"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bkg_color_white"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="56dp"
                android:paddingTop="30dp"
                android:text="Add network request when the listview is refresing or loading more."
                android:textSize="@dimen/fontsize_subhead"/>
        </LinearLayout>
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/storydetail_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="196dp"
        android:onClick="doEditClick"
        android:src="@drawable/ic_mode_edit_white_24dp"
        scrumer:fab_colorNormal="@color/bkg_color_ripple_accent"
        scrumer:fab_colorPressed="@color/bkg_color_ripple_accent_pressed"
        scrumer:fab_colorRipple="@color/bkg_color_ripple_accent"/>

</FrameLayout>
