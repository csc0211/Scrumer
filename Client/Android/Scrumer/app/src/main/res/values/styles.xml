<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="style_main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_color_white</item>
        <item name="android:paddingTop">@dimen/main_tab_padding</item>
        <item name="android:paddingBottom">@dimen/main_tab_padding</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
